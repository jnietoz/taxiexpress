<%= simple_form_for @usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Nombres %>
  <%= error_span(@usuario[:Nombres]) %>
  <%= f.input :ApPaterno %>
  <%= error_span(@usuario[:ApPaterno]) %>
  <%= f.input :ApMaterno %>
  <%= error_span(@usuario[:ApMaterno]) %>
  <%= f.input :Nick %>
  <%= error_span(@usuario[:Nick]) %>
  <%= f.input :Contrasena,  as: :password %>
  <%= error_span(@usuario[:Contrasena]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn btn-default' %>
<% end %>
