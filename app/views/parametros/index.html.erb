<%- model_class = Parametro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:texto) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th width="230"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @parametros.each do |parametro| %>
      <tr>
        <td><%= link_to parametro.id, entidad_parametro_path(@entidad.id,parametro) %></td>
        <td><%= parametro.texto %></td>
        <td><%= parametro.valor %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_entidad_parametro_path(@entidad.id,parametro), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      entidad_parametro_path(@entidad.id,parametro),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<a class="btn btn-default" href="<%=entidades_path%>">Regresar</a>
<%= link_to t('.new', :default => t("helpers.links.new")), new_entidad_parametro_path, :class => 'btn btn-primary' %>


